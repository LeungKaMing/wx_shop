/* common css */
.desc--common {
  display:block;
  width:100%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.comment--common {
  display:block;
  text-align:right;
  font-size:14px;
}
.line--common {
  display: block;
  margin: 5rpx auto;
  width: 95%;
  height: 2rpx;
  background: #ccc;
}