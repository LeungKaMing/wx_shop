/* pages/message__chat/index.wxss */
.top__bar {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  height: 50rpx;
  line-height: 50rpx;
  background-color: orange;
  color: #fff;
}
/* 商品信息 */
.good__message {
  height: 150rpx;
  border-bottom: 1rpx solid #d9d9d9;
}
.good__message--left, .good__message--middle, .good__message--right {
  float: left;
}
.good__message--left {
  position: relative;
  padding: 25rpx 0;
  height: 100rpx;
  width: 20%;
  text-align: center;
}
.good__message--left image {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}
.good__message--middle {
  padding:25rpx 0;
  height: 100rpx;
  width: 60%;
  float: left;
  overflow:hidden;
}
.good__message--middle .good__message--name {
  font-size: 33rpx;
  color: #333;
}
.good__message--middle .good__message--price {
  font-size: 26rpx;
  color: #707070;
}
.good__message--right {
  margin-right:3%;
  padding:25rpx 0 25rpx 0;
  width:17%;
  height:100rpx;
  float:left;
}
.good__message--right .good__message--desc {
  font-size: 20rpx;
  color: #6e6c6c;
  float:right;
}
.good__message--right .good__message--button {
  margin:13rpx 0 0 0;
  width: 80%;
  font-size: 20rpx;
  color: #4b4a4a;
  padding:0;
  float:right;
}
/* 聊天主体信息 */
.chat__message--list {
  padding-bottom: 20rpx;
  height: 857rpx;
  overflow: auto;
  background-color: #f8f8f8;
}
.chat__message--list .chat__message--item {
  min-height: 120rpx;
}
.chat__message--list .chat__message--item::after{
  content: "";  
  display: table; 
  clear: both;  
}
.chat__message--list .chat__message--item::before{
  content: "";  
  display: table; 
}
.chat__message--list .chat__message--item .chat__message--avatar {
  padding: 10rpx 0;
  width: 20%;
  height: 100rpx;
  text-align: center;
}
.chat__message--list .chat__message--item .chat__message--avatar.left {
  float: left;
} 
.chat__message--list .chat__message--item .chat__message--avatar.right {
  float: right;
} 
.chat__message--list .chat__message--item .chat__message--avatar .message__item--image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.chat__message--list .chat__message--item .chat__message--text {
  padding: 10rpx 0;
  width: 80%;
  float: left;
}
.chat__message--list .chat__message--item .chat__message--text.left {
  text-align: left;
}
.chat__message--list .chat__message--item .chat__message--text.left .message__item--text { 
  border-radius:0rpx 10rpx 10rpx 10rpx;
  background-color: #fff;
}
.chat__message--list .chat__message--item .chat__message--text.right {
  text-align: right;
}
.chat__message--list .chat__message--item .chat__message--text.right .message__item--text { 
  border-radius:10rpx 0rpx 10rpx 10rpx;
  background-color: #f8cc55;
}
.chat__message--list .chat__message--item .chat__message--text .message__item--text{
  display:inline-block;
  margin:20rpx 0 0 0;
  padding:17rpx;
  line-height: 30rpx;
  text-align:left;
  font-size: 24rpx;
  color: #666;
  max-width: 69%;
  border-radius:0rpx 10rpx 10rpx 10rpx;
}
/* 聊天输入框 */
.chat__message--send{
  position: fixed;
  bottom: 0;
  height:100rpx;
  width:100%;
  background-color: #fff;
}
.chat__message--send .chat__message--more{
  float: left;
  width: 15%;
  padding:12.5rpx 0;
  text-align:center;
}
.chat__message--send .chat__message--more image{
  width: 75rpx;
  height: 75rpx;
}
.chat__message--send .chat__message--input{
  float: left;
  padding:12.5rpx 0;
  width: 55%;
}
.chat__message--send .chat__message--input input{
  height: 50rpx;
  padding:12.5rpx 0 12.5rpx 25rpx;
  border-radius: 59rpx;
  background-color: #f8f8f8;
  font-size: 29rpx;
}
.chat__message--send .chat__message--emoji{
  float: left;
  width: 15%;
  padding:12.5rpx 0;
  text-align:center;
}
.chat__message--send .chat__message--emoji image{
  width: 75rpx;
  height: 75rpx;
}
.chat__message--send .chat__message--file{
  float: left;
  width: 15%;
  padding:12.5rpx 0;
  text-align:center;
}
.chat__message--send .chat__message--file image{
  width: 75rpx;
  height: 75rpx;
}